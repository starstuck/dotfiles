#  -*- mode: sh -*-
# Load developer utilities installed locally in workspace

WORKSPACE=${WORKSPACE:-~/Developer}

for D in "$WORKSPACE"/language-servers/* "$WORKSPACE"/*
do
  if [ -f "$D"/enable ]; then
    source "$D"/enable
  elif [ -d "$D"/bin ]; then
    PATH="$D/bin:$PATH"
  fi
  # Check if utility provides bash completions too
  if [ -d "$D"/etc/bash_completion.d ]; then
    BASH_COMPLETION="${D}/etc/bash_completion.d:${BASH_COMPLETION}"
  fi
done
export PATH
export BASH_COMPLETION="${BASH_COMPLETION%:}"
